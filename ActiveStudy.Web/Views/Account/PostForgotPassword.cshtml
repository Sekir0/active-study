@inject IViewLocalizer localizer
@{
    ViewData["Title"] = localizer["Recover Password"];
}

<div class="d-lg-flex text-center">
    <div class="container d-lg-flex align-items-lg-center min-vh-lg-100 space-top-3 space-bottom-1 space-lg-0">
        <div class="w-100 mx-auto">
            <div class="w-md-80 w-lg-50 text-center mx-md-auto">
                <div class="mb-5">
                    <h1 class="h2">@localizer["Recover Password"]</h1>
                    <p>@localizer["An email has been sent. Please click the link when you get it."]</p>
                </div>
            </div>
        </div>
    </div>
</div>
