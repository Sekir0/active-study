@inject IViewLocalizer localizer
@{
    ViewData["Title"] = localizer["Your password has been reset"];
}

<div class="d-lg-flex text-center">
    <div class="container d-lg-flex align-items-lg-center min-vh-lg-100 space-top-3 space-bottom-1 space-lg-0">
        <div class="w-100 mx-auto">
            <div class="w-md-80 w-lg-50 text-center mx-md-auto">
                <div class="mb-5">
                    <h1 class="h2">@localizer["Your password has been reset"]</h1>
                </div>
                <a class="btn btn-primary transition-3d-hover" asp-area="" asp-controller="Account" asp-action="Login">@localizer["Sign In"]</a>
            </div>
        </div>
    </div>
</div>
