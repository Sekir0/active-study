@model ActiveStudy.Web.Models.Classes.ClassesListPageModel
@inject IViewLocalizer localizer

<div class="bg-light">
    <div class="container py-3">
        <div class="row justify-content-md-between align-items-md-center">
            <div class="col-md-5 mb-3 mb-md-0">
                <!-- Breadcrumb -->
                <nav class="d-inline-block rounded" aria-label="breadcrumb">
                    <ol class="breadcrumb breadcrumb-no-gutter font-size-1 mb-0">
                        <li class="breadcrumb-item">
                            <a asp-controller="School" asp-action="List">@localizer["Schools"]</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-controller="School" asp-action="Details" asp-route-id="@Model.School.Id">@Model.School.Title</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">@localizer["Classes"]</li>
                    </ol>
                </nav>
                <!-- End Breadcrumb -->
            </div>
        </div>
    </div>
</div>

<div class="container space-top-1 space-bottom-lg-2">
    <!-- Content -->
    <div class="row">
        <div class="col-md-4 col-lg-3 mb-9 mb-md-0">
            <partial name="_MainInfo" for="@Model.School" />
        </div>

        <div class="col-md-8 col-lg-9 column-divider-md">
            <div class="ml-lg-2">

                <!-- Nav Classic -->
                <ul class="nav nav-classic nav-rounded nav-justified border">
                    <li class="nav-item">
                        <a class="nav-link font-weight-bold" asp-controller="School" asp-action="Details" asp-route-id="@Model.School.Id">
                            <div class="d-md-flex justify-content-md-center align-items-md-center">
                                <figure class="d-none d-md-block w-100 max-w-5rem mr-3">
                                    <img class="img-fluid" src="/svg/icons/icon-24.svg" alt="SVG">
                                </figure>
                            </div>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link font-weight-bold" asp-controller="Teachers" asp-action="List" asp-route-schoolId="@Model.School.Id">
                            <div class="d-md-flex justify-content-md-center align-items-md-center">
                                <figure class="d-none d-md-block w-100 max-w-5rem mr-3">
                                    <img class="img-fluid" src="/svg/icons/icon-7.svg" alt="SVG">
                                </figure>
                            </div>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link font-weight-bold active" asp-controller="Classes" asp-action="List" asp-route-schoolId="@Model.School.Id">
                            <div class="d-md-flex justify-content-md-center align-items-md-center">
                                <figure class="d-none d-md-block w-100 max-w-5rem mr-3">
                                    <img class="img-fluid" src="/svg/icons/icon-22.svg" alt="SVG">
                                </figure>
                            </div>
                        </a>
                    </li>
                </ul>
                <!-- End Nav Classic -->

                <!-- Tab Content -->
                <div class="tab-content">
                    <div class="tab-pane fade pt-6 active show">
                        <div class="container d-flex align-items-center mx-0 mb-2">
                            <h2>@localizer["Classes"]</h2>
                            <a asp-controller="Classes" asp-action="Create" asp-route-schoolId="@Model.School.Id" class="ml-auto btn btn-soft-primary btn-sm">@localizer["Add Class"]</a>
                        </div>
                        <div class="container">
                            @foreach (var cls in Model.Classes)
                            {
                                <!-- Card -->
                                <a class="card card-frame py-3 px-4 mb-2" asp-controller="Classes" asp-action="Details" asp-route-schoolId="@Model.School.Id" asp-route-id="@cls.Id">
                                    <div class="row align-items-sm-center">
                                        <span class="col-sm-6 text-dark">
                                            @cls.Title
                                        </span>
                                        <span class="col-6 col-sm-3 text-body">
                                            @(cls.Teacher?.FullName ?? "-")
                                        </span>
                                        <span class="col-6 col-sm-3 text-right">
                                            @localizer["Open"] <i class="fas fa-angle-right fa-sm ml-1"></i>
                                        </span>
                                    </div>
                                </a>
                            }
                        </div>
                    </div>
                </div>
                <!-- End Tab Content -->
            </div>
        </div>
    </div>
    <!-- End Content -->
</div>
